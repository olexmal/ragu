# =============================================================================
# RAG System Environment Configuration
# =============================================================================
# Copy this file to .env and configure according to your environment
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Vector Database Configuration
# -----------------------------------------------------------------------------
# Path to ChromaDB persistent storage directory
CHROMA_PATH=./chroma

# Base name for document collections (versions will be appended automatically)
COLLECTION_NAME=common-model-docs

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# LLM model name for text generation (must be available in Ollama)
# Examples: mistral, llama2, codellama, phi
LLM_MODEL=mistral

# Embedding model name for document embeddings (must be available in Ollama)
# Examples: nomic-embed-text, all-minilm
TEXT_EMBEDDING_MODEL=nomic-embed-text

# Ollama API base URL (default: localhost)
OLLAMA_BASE_URL=http://localhost:11434

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
# Port on which the Flask API server will listen
API_PORT=8080

# Host address for the Flask API server
# Use '0.0.0.0' to listen on all interfaces, 'localhost' for local only
API_HOST=localhost

# Enable Flask debug mode (set to 'true' for development, 'false' for production)
FLASK_DEBUG=False

# Web UI port (for Docker Compose)
# Port on which the web UI will be accessible
WEB_UI_PORT=4200

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Enable authentication system (true/false)
# When false, all endpoints are publicly accessible
AUTH_ENABLED=true

# Authentication requirement level
# Options:
#   'all' - Authentication required for all endpoints
#   'write' - Authentication required only for write operations (default)
#   'none' - No authentication required (overrides AUTH_ENABLED)
AUTH_REQUIRED_FOR=write

# Username for authentication (change from default in production!)
AUTH_USERNAME=admin

# Password for authentication (change from default in production!)
# WARNING: Using default credentials in production is a security risk!
AUTH_PASSWORD=123QWEasd

# -----------------------------------------------------------------------------
# Session Security Configuration
# -----------------------------------------------------------------------------
# Secret key for Flask session encryption
# Generate a secure random key for production: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production

# Enable secure cookies (set to 'true' when using HTTPS)
# When true, cookies will only be sent over HTTPS connections
SESSION_SECURE=false

# -----------------------------------------------------------------------------
# API Key Configuration (Optional)
# -----------------------------------------------------------------------------
# API key for programmatic access (leave empty to disable)
# If set, can be used instead of username/password authentication
API_KEY=

# HTTP header name for API key authentication
API_KEY_HEADER=X-API-Key

# -----------------------------------------------------------------------------
# Directory Configuration
# -----------------------------------------------------------------------------
# Directory for storing application settings (Confluence config, system settings, etc.)
SETTINGS_DIR=./.rag_settings

# Directory for temporary file storage during processing
TEMP_FOLDER=./_temp

# Directory for query result cache
CACHE_DIR=./.rag_cache

# Directory for query history storage
HISTORY_DIR=./.rag_history

# Directory for monitoring and analytics data
MONITORING_DIR=./.rag_monitoring

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
# Enable query result caching (true/false)
USE_CACHE=true

# Cache time-to-live in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Maximum number of cached queries (oldest entries are removed when limit is reached)
CACHE_MAX_SIZE=100

# -----------------------------------------------------------------------------
# Query History Configuration
# -----------------------------------------------------------------------------
# Maximum number of query history entries to keep
MAX_HISTORY=1000

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
# Enable monitoring and analytics (true/false)
MONITORING_ENABLED=true

# -----------------------------------------------------------------------------
# Maven Integration (Optional)
# -----------------------------------------------------------------------------
# Path to Maven pom.xml file for version detection
# Only needed if integrating with Maven-based projects
MAVEN_POM_PATH=../pom.xml

# Maven property name for common model version
# Only needed if integrating with Maven-based projects
COMMON_MODEL_VERSION_PROPERTY=commonmodel.version

# -----------------------------------------------------------------------------
# External LLM Provider API Keys (Optional)
# -----------------------------------------------------------------------------
# These are only needed if using external LLM providers instead of Ollama
# Configure providers via the web UI Settings page

# OpenRouter API key (for OpenRouter provider)
OPENROUTER_API_KEY=

# OpenAI API key (for OpenAI or Azure OpenAI providers)
OPENAI_API_KEY=

# Anthropic API key (for Claude models)
ANTHROPIC_API_KEY=

# Azure OpenAI configuration (for Azure OpenAI provider)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# Google API key (for Google Gemini models)
GOOGLE_API_KEY=

# -----------------------------------------------------------------------------
# Password Encryption (Future Enhancement)
# -----------------------------------------------------------------------------
# Encryption key for encrypting sensitive data (e.g., Confluence passwords)
# Generate a secure key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Leave empty to disable encryption (not recommended for production)
ENCRYPTION_KEY=

# =============================================================================
# Notes
# =============================================================================
# - All paths are relative to the project root directory
# - Boolean values should be 'true' or 'false' (case-insensitive)
# - Never commit the actual .env file to version control
# - For production deployments, use strong, unique values for:
#   * SECRET_KEY
#   * AUTH_USERNAME
#   * AUTH_PASSWORD
#   * ENCRYPTION_KEY (when implemented)
# =============================================================================
